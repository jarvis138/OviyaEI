# Oviya AI Production Environment Variables
# Copy this file to .env.production and fill in the values

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Service URLs (for internal communication)
CSM_SERVICE_URL=http://csm-service:8000
ASR_SERVICE_URL=http://asr-service:8001
ORCHESTRATOR_SERVICE_URL=http://orchestrator-service:8002

# Redis Configuration
REDIS_URL=redis://redis:6379

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOGTAIL_TOKEN=your_logtail_token_here

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# File Storage
STORAGE_BUCKET=oviya-storage
STORAGE_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook URLs (for external integrations)
WEBHOOK_URL=your_webhook_url_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRISIS_DETECTION=true
ENABLE_CONTENT_MODERATION=true
ENABLE_RATE_LIMITING=true

# Performance Settings
MAX_CONCURRENT_SESSIONS=100
MAX_SESSION_DURATION_MINUTES=60
AUDIO_QUALITY=high

# Development/Production Mode
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info


